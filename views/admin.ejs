<% layout('layouts/boilerplate') %>
    <% for(user of users){ %>
        <form action="/admin?_method=PUT" method="POST">
            <div class="sign-form row">



                <label for="username">Username</label>
                <input type="text" name="username" id="username" value="<%= user.username %>">

                <label for="email ">E-mail</label>
                <input type="email" name="email" id="email" value="<%= user.email %>">
                
                <label for="admin">Admin</label>
                <input type="checkbox" name="admin" id="admin" <% if(user.admin==='on' ){%> checked <% } %>>
                
                <label for="_id">ID</label>
                <input type="text" name="_id" id="_id" value="<%= user._id %> " readonly
                    style="background-color: gainsboro;">

                <button class="btn btn-success btn-block" >Signup</button>

            </div>
        </form>
        <% } %>