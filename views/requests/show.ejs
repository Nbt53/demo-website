<% layout('layouts/global') %>
    <div class="show contact-show">
        <div class="secondary-title show-title u-margin-bottom-medium">
            <%= request.email %>
        </div>
        <div class="row">

            <div class="col-1-of-2">

                <a href="<%= request.image[0].url %>" target="__blank"> <img class="show-image"
                        src="<%= request.image[0].url %>" alt=""></a>

            </div>
            <div class="col-1-of-2">
                <div class="show-info contact-show-info">
                    <div class="show-price contact-show-description">
                        <%= request.description %>
                    </div>
                    <div class="contact-show-buttons">
                        <a href="/requests"><button
                                class="btn btn-success btn-block contact-request-button">Back</button></a>

                        <form action="/requests/<%= request._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger btn-block contact-request-button">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>