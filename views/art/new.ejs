<% layout('layouts/global') %>
<div class="secondary-title new-title">Upload new art</div>
    <div class="new">
        <form action="/art/new" method="POST" enctype="multipart/form-data">
            
            <div class="sign-form row new-input">

                <label for="title">title:</label>
                <input type="text" name="art[title]" id="title">
                <label for="price">price:</label>
                <input type="number" name="art[price]" id="price">
                <label for="image">image:</label>
                <input type="file" name="image" id="image" multiple>
                <label for="description">description:</label>
                <textarea name="art[description]" id="description" cols="5" rows="5" class="w-50 p-3"></textarea>
                
<br>
                <button class="button button-dark">Create</button>

            </div>
        </form>
    </div>